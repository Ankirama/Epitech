<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="209sondage"
        android:id="@+id/title"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/population"
        android:inputType="text"
        android:layout_below="@+id/populationId"
        android:layout_alignLeft="@+id/populationId"
        android:layout_alignStart="@+id/populationId"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Population:"
        android:id="@+id/populationId"
        android:textSize="20sp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Echantillon:"
        android:id="@+id/echantillonId"
        android:layout_marginTop="44dp"
        android:textSize="20sp"
        android:layout_below="@+id/population"
        android:layout_alignLeft="@+id/population"
        android:layout_alignStart="@+id/population"
        android:layout_alignRight="@+id/population"
        android:layout_alignEnd="@+id/population" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/echantillon"
        android:layout_below="@+id/echantillonId"
        android:layout_alignLeft="@+id/echantillonId"
        android:layout_alignStart="@+id/echantillonId"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/echantillonId"
        android:layout_alignEnd="@+id/echantillonId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sondage:"
        android:id="@+id/sondageId"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:layout_below="@+id/echantillon"
        android:layout_alignLeft="@+id/echantillon"
        android:layout_alignStart="@+id/echantillon"
        android:layout_alignRight="@+id/echantillon"
        android:layout_alignEnd="@+id/echantillon" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sondage"
        android:layout_below="@+id/sondageId"
        android:layout_alignLeft="@+id/sondageId"
        android:layout_alignStart="@+id/sondageId"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/sondageId"
        android:layout_alignEnd="@+id/sondageId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculer"
        android:id="@+id/calculButton"
        android:layout_below="@+id/sondage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/calculButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/populationId" />

</RelativeLayout>
